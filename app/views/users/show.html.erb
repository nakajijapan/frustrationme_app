<section id="<%= controller_name %>_<%= action_name %>">

  <!-- prefile -->
  <div class="profile_header">
    <div class="profile_icon">
      <%= icon_image_tag @target_user.icon_name, alt: @target_user.username %>
    </div>

    <div class="username">
      <h2>
        <%= @target_user.username %>
      </h2>
    </div>

    <!-- follow_button -->
    <% if @current_user.id != @target_user.id %>
      <div class="follow_group">
        <% if @friendship.present? %>
          <button class="btn" id="unfollow_button" data-following_id="<%= @target_user.id %>">unfollow</button>
        <% else %>
          <button class="btn" id="follow_button" data-following_id="<%= @target_user.id %>">follow</button>
        <% end %>
      </div>
    <% end %>
    <!-- /follow_button -->

    <div class="friends btn-group">
      <a class="btn" href="<%= "/users/#{@target_user.username}/followings" %>">
        <h4><%= @target_user.count_followings %></h4>
        <p>follows</p>
      </a>
      <a class="btn" href="<%= "/users/#{@target_user.username}/followers" %>">
        <h4><%= @target_user.count_followers %></h4>
        <p>followers</p>
      </a>
    </div>
  </div>
  <!-- /prefile -->

  <!-- item_menu -->
  <div class="items_menu">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#"><%= @target_user.fumans.count %> monmon</a>
      </li>
      <li>
        <a href="#"><%= @target_user.categories.count %> Categories</a>
      </li>
       <li>
        <a href="#">5 Statuses</a>
      </li>

      <!--
      <li><a href="#">22 Tab</a></li>
      -->
    </ul>
  </div>
  <!-- /item_menu -->

  <!-- items -->
  <div class="item_box">
    <ul class="items">
      <% @items.each do |item| %>
        <!-- item -->
        <li class="item" data-fuman_id="<%= item.fuman.id %>">
          <div class="side_top">
            <a href="/items/<%= item.id %>">
              <%= icon_image_tag item.image_l, alt: item.title %>
            </a>
            <p>
              <%= item.title %>
            </p>
          </div>
          <div class="service_icon">
            <%= image_tag "/assets/service/icon_#{item.service_code}.png", title: item.title %>
          </div>
        </li>
        <!-- /item-->
      <% end %>
    </ul>
  </div>
  <!-- /items -->
</section>

<script>
$(function() {
  var app_view = new BackboneFrustration.Views.Users.ShowView();
});
$(window).load(function () {
  BackboneFrustration.Views.Users.ShowView.prototype.initialize_grid();
});
</script>
